.card.shadow.transform.rounded.mb-4
  .card-header
    .text-center
      = link_to course.title, course_path(course), class: 'stretched-link'
  
  - if course.avatar.attached?
    .card-img-top
      = image_tag course.avatar, height: "220px", width: "100%"

  .card-body.fixed
    .text-center
      %small= course.short_description.truncate(125)
  .card-footer
    .row
      .col-md-6
        .text-warning.fa.fa-star
        %b= course.average_rating
        (
        .fa.fa-user-graduate
        = course.enrollments_count
        )
        .fa.fa-tasks
        = course.lessons_count
      .col-md-6
        .text-right
          - if course.user.image?
            = image_tag course.user.image, size: '20x20', alt: "#{course.user.email}", class: 'rounded-circle'
          - else
            .fa.fa-chalkboard-teacher
          = course.user.username
