.card.shadow
  .card-header
    .fa.fa-fa-graduation-cap
    = link_to course.title, course_path(course)
  
  - if course.avatar.attached?
    .card-img-top
      = image_tag course.avatar, height: "auto", width: "100%"
  .card-body
    %small= simple_format(course.short_description)
  .card-footer
    .text-center
      = enrollment_button(course)
      .row
      = review_button(course)
  .card-footer
    .row
      .col-md-6
        .text-warning.fa.fa-star
        %b= course.average_rating
        (
        .fa.fa-user-graduate
        = course.enrollments_count
        )
        .fa.fa-tasks
        = course.lessons_count
      .col-md-6
        .text-right
          = link_to user_path(course.user) do
            - if course.user.image?
              = image_tag course.user.image, size: '20x20', alt: "#{course.user.email}", class: 'rounded-circle'
            - else
              .fa.fa-chalkboard-teacher
            = course.user.username
  - if current_user
    -if policy(course).owner?
      .card-footer
        .btn-group
          = link_to t('course.buttons.add_lesson'), new_course_lesson_path(course, @lesson), class: 'btn btn-sm btn-primary mt-1'
          = link_to t('course.buttons.editor'), course_course_wizard_index_path(course), class: 'btn btn-sm btn-warning mt-1'
        - if policy(course).destroy?
          .float-right
            = link_to course, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger mt-1' do
              .fa.fa-trash
              -# = t('course.buttons.destroy')
    - if policy(course).admin_or_owner?
      .card-footer
        .custom-control.custom-switch
          - if course.published?
            %input#customSwitch1.custom-control-input{:disabled => "disabled", :checked => "checked", :type => "checkbox"}
          - else
            %input#customSwitch2.custom-control-input{:disabled => "disabled", :type => "checkbox"}
          %label.custom-control-label{:for => "Published"} 
            = t('course.buttons.unpublish')
        .row
        - if policy(course).approve?
          - if course.approved?
            = link_to unapprove_course_path(course), method: :patch do
              .custom-control.custom-switch
                %input#customSwitch1.custom-control-input{:type => "checkbox", :checked => "checked"}
                %label.custom-control-label{:for => "customSwitch1"} 
                  = t('course.buttons.unapprove')
          - else
            = link_to approve_course_path(course), method: :patch do
              .custom-control.custom-switch
                %input#customSwitch1.custom-control-input{:type => "checkbox"}
                %label.custom-control-label{:for => "customSwitch1"} 
                  = t('course.buttons.approve')
        - else
          .custom-control.custom-switch
            - if course.approved?
              %input#customSwitch1.custom-control-input{:disabled => "disabled", :checked => "checked", :type => "checkbox"}
            - else
              %input#customSwitch2.custom-control-input{:disabled => "disabled", :type => "checkbox"}
            %label.custom-control-label{:for => "Published"} 
              = t('course.buttons.publish')
  - if course.tags.any?
    .card-footer
      - course.tags.each do |tag|
        .badge.badge-info
          = tag.name
