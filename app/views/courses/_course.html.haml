.card.shadow
  .card-header
    .fa.fa-fa-graduation-cap
    = link_to course.title, course_path(course)
  
  - if course.avatar.attached?
    .card-img-top
      = image_tag course.avatar, height: "auto", width: "100%"
  .card-body
    %small= simple_format(course.short_description)
  .card-footer
    .text-center
      = enrollment_button(course)
      .row
      = review_button(course)
  .card-footer
    .row
      .col-md-6
        .text-warning.fa.fa-star
        %b= course.average_rating
        (
        .fa.fa-user-graduate
        = course.enrollments_count
        )
        .fa.fa-tasks
        = course.lessons_count
      .col-md-6
        .text-right
          = link_to user_path(course.user) do
            - if course.user.image?
              = image_tag course.user.image, size: '20x20', alt: "#{course.user.email}", class: 'rounded-circle'
            - else
              .fa.fa-chalkboard-teacher
            = course.user.username
  - if current_user
    -if policy(course).owner?
      .card-footer
        = link_to t('course.buttons.add_lesson'), new_course_lesson_path(course, @lesson), class: 'btn btn-sm btn-primary'

        = link_to course_course_wizard_index_path(course), class: 'btn btn-sm btn-warning mr-1' do
          .fa.fa-edit
            = t('course.buttons.editor')
        - if policy(course).destroy?
          = link_to t('course.buttons.destroy'), course, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger'
    - if policy(course).admin_or_owner?
      .card-footer
        - if course.published?
          .badge.badge-success
            = t('course.attributes.published')
        - else 
          .badge.badge-danger
            = t('course.attributes.unpublished')
        
        - if course.approved?
          .badge.badge-success
            = t('course.attributes.approved')
        - else 
          .badge.badge-danger
            = t('course.attributes.unapproved')
    - if policy(course).approve?
      .card-footer
        - if course.approved?
          = link_to t('course.buttons.unapprove'), unapprove_course_path(course), method: :patch, class: 'btn btn-sm btn-danger'      
        - else 
          = link_to t('course.buttons.approve'), approve_course_path(course), method: :patch, class: 'btn btn-sm btn-success'  
  .card-footer
    - course.tags.each do |tag|
      .badge.badge-info
        = tag.name
