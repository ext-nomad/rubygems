- content_for :title do
  = t('title.title')
  \|
  = f('.reviewing')
  = @enrollment

.card.shadow
  .card-header
    %h3
      .fa.fa-lock-open
      = f('.add')
  .card-body
    = render 'form'
  .card-footer
    = link_to f('global.buttons.show'), @enrollment
    \|
    = link_to f('global.buttons.back'), course_path(@enrollment.course)
