%h3.text-center
  = t('title.tags')
  .badge.badge-info
    = @tags.count
.card.shadow
  .card-body
    - @tags.each do |tag|
      .row
      .btn-group
        = link_to courses_path(courses_search: {course_tags_tag_id_eq: tag.id}), class: "btn btn-lg btn-info mt-1" do
          = tag.name
          .badge.badge-light
            = tag.course_tags_count
        - if policy(tag).destroy?
          = link_to t('global.buttons.destroy'), tag, method: :delete, data: { confirm: t('global.confirmation') }, class: "btn btn-lg btn-danger mt-1"
