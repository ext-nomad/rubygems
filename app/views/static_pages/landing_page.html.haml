- content_for :title do
  = t('title.title')
  \|
  = t('title.phrase')

.jumbotron.shadow.parallax
  .h1.text-center.text-shadow
    = t('.phrase')
  .p-4
  
  - if current_user
    = search_form_for @ransack_courses, as: :courses_search,url: courses_path do |f|
      .input-group.d-flex.justify-content-center
        = f.search_field :title_cont, class: 'form-control-sm', style: 'width: 300px;', autocomplete: 'off', placeholder: t('placeholders.find')
        %span.input-group-append
          %button.btn.btn-outline-light.btn-sm{:type => "submit"}
            %span.fa.fa-search{"aria-hidden" => "true"}
    .p-2
  - else
    %h3.text-shadow= t('.join')
    .p-2
    = link_to t('session.register'), new_user_registration_path, class: 'btn btn-custom-purple btn-lg'
    = link_to t('session.log_in'), new_user_session_path, class: 'btn btn-custom-purple btn-lg'
    .row.mt-1
    = link_to user_google_oauth2_omniauth_authorize_path, class: 'btn btn-danger btn-lg mr-1' do
      = t('.continue')
      .fab.fa-google
    .row.mt-1
    = link_to user_github_omniauth_authorize_path, class: 'btn btn-dark btn-lg mr-1' do
      = t('.continue')
      .fab.fa-github
    .row.mt-1
    = link_to user_vkontakte_omniauth_authorize_path, class: 'btn btn-primary btn-lg mr-1' do
      = t('.continue')
      .fab.fa-vk

.card-group.shadow
  .card.card-body.parallax
    %h1.text-shadow
      .text-center
        .fa.fa-graduation-cap
    .text-center
      = t('.courses', count: Course.approved.published.count)
      .row
      %small= t('.explore')
  .card.card-body.parallax
    %h1.text-shadow
      .text-center
        .fa.fa-chalkboard-teacher
    .text-center
      = t('.teachers', count: Course.distinct.count(:user_id))
      .row
      %small= t('.find')
  .card.card-body.parallax
    %h1.text-shadow
      .text-center
        .fa.fa-user-graduate
    .text-center
      = t('.learners', count: User.count)
      .row
      %small= t('.community')
  .card.card-body.parallax
    %h1.text-shadow
      .text-center
        .fa.fa-infinity
    .text-center
      = t('.access')
      .row
      %small= t('.schedule')
%p

%h2.text-center.mt-5
  .fa.fa-tags
  = t('.tags')
.d-flex.justify-content-center
  - @popular_tags.each do |tag|
    = link_to courses_path(courses_search: {course_tags_tag_id_eq: tag.id}) do
      .mt-1.btn.btn-outline-info.mr-1
        = tag.name
        %span.badge.badge-info
          = tag.course_tags_count
%hr.mb-4.mt-5

- if current_user
  - if current_user.enrollments.any?
    .text-center.mb-4
      = link_to learning_courses_path, class: 'btn btn-lg btn-outline-dark' do
        .fa.fa-user-graduate
        = t('.learning')
    .row
      - @learning_courses.each do |course|
        .col-md-6
          = render 'courses/course', course: course
          %p
    %hr.mb-4
  - if current_user.courses.any?
    .text-center.mb-4
      = link_to teaching_courses_path, class: 'btn btn-lg btn-outline-dark' do
        .fa.fa-chalkboard-teacher
        = t('.teaching')
    .row
      - @teaching_courses.each do |course|
        .col-md-6
          = render 'courses/course', course: course
          %p
    %hr.mb-4

.text-center.mb-4
  = link_to courses_path(courses_search: {s: 'enrollments_count desc'}), class: 'btn btn-lg btn-outline-dark' do
    .fa.fa-chart-line
    = t('.popular')
.row
  - @popular.each do |course|
    .col-md-6
      = render 'courses/course', course: course
      %p
%hr.mb-4

.text-center.mb-4
  = link_to courses_path(courses_search: {s: 'average_rating desc'}), class: 'btn btn-lg btn-outline-dark' do
    .fa.fa-star
    = t('.top')
.row
  - @top_rated.each do |course|
    .col-md-6
      = render 'courses/course', course: course
      %p
%hr.mb-4

.text-center.mb-4
  = link_to courses_path(courses_search: {s: 'created_at desc'}), class: 'btn btn-lg btn-outline-dark' do
    .fa.fa-clock
    = t('.latest')
.row
  - @latest.each do |course|
    .col-md-6
      = render 'courses/course', course: course
      %p
%hr.mb-4

%h2.text-center
  .fa.fa-comment
  = t('.reviews')
.row
  - @latest_good_review.each do |enrollment|
    .col-md-6
      = render 'enrollments/enrollment', enrollment: enrollment
      %p
%br

.card-group.shadow
  .card
    .card-body
      .text-center
        .fa.fa-clock
        %b= t('.block.pace')
        .row
        %small
          = t('.block.access')
  .card
    .card-body
      .text-center
        .far.fa-check-circle
        %b= t('.block.learn')
        .row
        %small
          = t('.block.select')
  .card
    .card-body
      .text-center
        .far.fa-play-circle
        %b= t('.block.video')
        .row
        %small
          = t('.block.library')
